<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.crille.hvdagen">
    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>

    <application
            android:allowBackup="true"
            android:clearTaskOnLaunch="true"
            android:icon="@drawable/icon_gubben"
            android:label="@string/app_name"
            android:theme="@style/hvTheme">
        <activity
                android:name="Start"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="MinDag"
                android:label="@string/label_mindag">
        </activity>
        <activity
                android:name="Schema"
                android:label="@string/label_schema">
        </activity>
        <activity
                android:name="Twitter"
                android:label="@string/label_twitter">
        </activity>
        <activity
                android:name="Login"
                android:label="@string/label_login">
        </activity>
        <activity
                android:name="PickSchema"
                android:label="@string/label_pickschema">
        </activity>
        <activity
                android:name="SchemaDetail"
                android:label="@string/label_schema_detail">
        </activity>
    </application>
</manifest>
