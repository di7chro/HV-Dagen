<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/mindagCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:paddingTop="2dip"
                android:textColor="@color/general_title"
                android:textSize="20sp" android:text="Kurs"/>

        <TextView
                android:id="@+id/mindagTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/general_title"
                android:layout_weight="1"
                android:textSize="15sp" android:text="Tagg"/>
    </LinearLayout>

    <TextView
            android:id="@+id/mindagDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hv_txtColor"
            android:textSize="16sp" android:text="Desc"/>
    <TextView
            android:id="@+id/mindagTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dip"
            android:textColor="@color/hv_txtColor"
            android:textSize="14sp" android:text="Time"/>

    <TextView
            android:id="@+id/mindagLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dip"
            android:textColor="@color/hv_txtColor"
            android:textSize="14sp" android:text="Location"/>

    <TextView
            android:id="@+id/mindagLink"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:paddingBottom="10dp" android:text="Link"/>

</LinearLayout>
